# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# General
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ls='eza'
alias eza='eza -abghHliS --group-directories-first'
alias -h='-h 2>&1 | bat --language=help --style=plain'
alias --help='--help 2>&1 | bat --language=help --style=plain'