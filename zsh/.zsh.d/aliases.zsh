# Enable aliases to be sudo-ed
alias sudo='sudo '

# Run NeoVim
alias v='nvim'

# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# General
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ll='ls -alFh --color=auto'
alias exa='exa -abghHliS --group-directories-first'
