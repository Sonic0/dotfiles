# Enable aliases to be sudo-ed
alias please='sudo '

# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Git aliases
alias glog='git log --log-size --decorate=full'

# General
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ll='ls -alFh --color=auto'
alias exa='exa -abghHliS --group-directories-first'
alias e='exa'
alias c='clear'
alias less='lnav'
alias cat='bat'
